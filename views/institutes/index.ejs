<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Institutes</h1>

    <% for (let institute of institutes){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(institute.images.length) {%>
                <img class="img-fluid" alt="" src="<%=institute.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/EduRater/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= institute.title %> </h5>

                    <p class="card-text"><%= institute.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= institute.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/institutes/<%=institute._id%>">View <%=institute.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const institutes = { features: <%- JSON.stringify(institutes) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
